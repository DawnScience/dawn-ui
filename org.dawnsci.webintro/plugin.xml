<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.dawnsci.webintro.item" name="Web Intro Page Item Register" schema="schema/org.dawnsci.webintro.item.exsd"/>
   <extension-point id="org.dawnsci.webintro.page" name="Web Intro Page Register" schema="schema/org.dawnsci.webintro.page.exsd"/>

   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.dawnsci.webintro.views.WelcomePart"
            icon="icons/dawn-logo-icon.png"
            id="org.dawnsci.webintro">
      </intro>
      <introProductBinding
            introId="org.dawnsci.webintro"
            productId="org.dawnsci.product.plugin.DAWN">
      </introProductBinding>
   </extension>
<extension
         point="org.dawnsci.webintro.page">
      <introPage
            content_file="content/page1content.md"
            id="org.dawnsci.webintro.content.introPage1"
            name="Demo"
            ordering="1"
            page_id="welcome">
      </introPage>
      <introPage
            content_file="pages/overview.md"
            id="org.dawnsci.webintro.pages.overview"
            name="Overview"
            ordering="2"
            page_id="overview">
      </introPage>
   </extension>
<extension
      point="org.dawnsci.webintro.item">
   <introContent
         content_file="content/testcontent.md"
         description="A description here"
         id="org.dawnsci.webintro.introContent1"
         name="This is a content contribution"
         parent_id="welcome">
   </introContent>
   <introLink
         description="This is an introLink contribution, it should take you to the **dawn** website"
         href="http://dawnsci.org"
         id="org.dawnsci.webintro.introLink1"
         name="A Link to a website"
         parent_id="welcome">
   </introLink>
   <introAction
         class="org.dawnsci.webintro.actions.OpenCheatsheetAction:uk.ac.diamond.scisoft.analysis.rcp.contributions.NeXusScansCheatsheet"
         description="This should hopefully open a cheat sheet"
         id="org.dawnsci.webintro.introAction2"
         name="Open Cheat Sheet"
         parent_id="cat1">
   </introAction>
   <introContent
         content_file="content/about-dawn.md"
         id="org.dawnsci.webintro.content.about-dawn"
         name="About DAWN"
         ordering="1"
         parent_id="cat1">
   </introContent>
   <introLink
         description="Link to the description of the EPL license used in DAWN"
         href="http://www.eclipse.org/legal/epl-v10.html"
         id="org.dawnsci.webintro.content.licence"
         name="License"
         ordering="2"
         parent_id="overview">
   </introLink>
   <introCategory
         category_id="cat1"
         description="Test category, hopefully this will animate nicely"
         id="org.dawnsci.webintro.introCategory1"
         name="Test Category"
         parent_id="welcome">
   </introCategory>
   <introContent
         description="Open a feedback form"
         id="uk.ac.diamond.scisoft.feedback"
         name="Leave Feedback"
         parent_id="org.dawnsci.webintro.introContent1">
   </introContent>
</extension>
</plugin>
