<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.dawnsci.webintro.item" name="Web Intro Page Item Register" schema="schema/org.dawnsci.webintro.item.exsd"/>
   <extension-point id="org.dawnsci.webintro.page" name="Web Intro Page Register" schema="schema/org.dawnsci.webintro.page.exsd"/>

   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.dawnsci.webintro.views.WelcomePart"
            icon="icons/dawn-logo-icon.png"
            id="org.dawnsci.webintro">
      </intro>
      <introProductBinding
            introId="org.dawnsci.webintro"
            productId="org.dawnsci.product.plugin.DAWN">
      </introProductBinding>
   </extension>
<extension
         point="org.dawnsci.webintro.page">
      <introPage
            content_file="content/page1content.md"
            id="org.dawnsci.webintro.content.introPage1"
            name="Intro Page 1"
            ordering="1"
            page_id="welcome">
      </introPage>
      <introPage
            content_file="content/page2content.md"
            id="org.dawnsci.webintro.content.introPage2"
            name="Intro Page 2"
            ordering="1"
            page_id="welcome2">
      </introPage>
   </extension>
<extension
      point="org.dawnsci.webintro.item">
   <introContent
         content_file="content/testcontent.md"
         description="A description here"
         id="org.dawnsci.webintro.introContent1"
         name="This is a content contribution"
         page_id="welcome">
   </introContent>
   <introLink
         description="This is an introLink contribution, it should take you to the **dawn** website"
         href="http://dawnsci.org"
         id="org.dawnsci.webintro.introLink1"
         name="A Link to a website"
         page_id="welcome">
   </introLink>
</extension>
</plugin>
