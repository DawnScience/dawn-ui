<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.dawnsci.slicing.api.slicingTool">
      <slicing_tool
            class="org.dawnsci.slicing.tools.plot.LineSlicingTool"
            icon="icons/TraceLine.png"
            id="org.dawnsci.slicing.tools.lineSliceTool"
            tooltip="Slice as line plots">
      </slicing_tool>
      <slicing_tool
            class="org.dawnsci.slicing.tools.plot.StackSlicingTool"
            icon="icons/TraceLines.png"
            id="org.dawnsci.slicing.tools.stackSlicingTool"
            tooltip="Slice as a stack of line plots">
      </slicing_tool>
      <slicing_tool
            class="org.dawnsci.slicing.tools.plot.Stack3DSlicingTool"
            icon="icons/TraceLines3D.png"
            id="org.dawnsci.slicing.tools.stack3DSlicingTool"
            tooltip="Slice as a stack of line plots in 3D">
      </slicing_tool>
      <slicing_tool
            class="org.dawnsci.slicing.tools.plot.ImageSlicingTool"
            icon="icons/TraceImage.png"
            id="org.dawnsci.slicing.tools.imageSlicingTool"
            tooltip="Slice as image">
      </slicing_tool>
      <slicing_tool
            class="org.dawnsci.slicing.tools.plot.SurfaceSlicingTool"
            icon="icons/TraceSurface.png"
            id="org.dawnsci.slicing.tools.surfaceSlicingTool"
            tooltip="Slice as surface">
      </slicing_tool>
      <slicing_tool
            class="org.dawnsci.slicing.tools.plot.Scatter3DSlicingTool"
            icon="icons/TraceScatter3D.png"
            id="org.dawnsci.slicing.tools.scatter3DSlicingTool"
            tooltip="Slice as 3D scatter plot">
      </slicing_tool>
      <slicing_tool
            class="org.dawnsci.slicing.tools.hyper.HyperSlicingTool"
            icon="icons/cutter.png"
            id="org.dawnsci.slicing.tools.hyperSlicingTool"
            separator="true"
            tooltip="Hyper 3D Slicing">
      </slicing_tool>
      <slicing_tool
            class="org.dawnsci.isosurface.tool.IsosurfaceTool"
            icon="icons/IsoSurface.png"
            id="org.dawnsci.isosurface.tool.isosurfaceTool"
            tooltip="Slice data using an iso-surface">
      </slicing_tool>
      
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="uk.ac.diamond.scisoft.analysis.rcp"
            class="org.dawnsci.slicing.tools.hyper.HyperView"
            icon="icons/chart_curve.png"
            id="org.dawnsci.slicing.tools.hyper.hyperView"
            name="Hyper3D"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.dawnsci.plotting.api.plottingViewer">
      <plottingViewer
            class="org.dawnsci.slicing.tools.hyper.HyperPlotViewer"
            id="org.dawnsci.slicing.tools.hyper.HyperPlotViewer">
      </plottingViewer>
   </extension>

</plugin>
