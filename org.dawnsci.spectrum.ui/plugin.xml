<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.dawnsci.spectrum.ui.SpectrumPerspective"
            icon="icons/spectrum.png"
            id="org.dawnsci.spectrum.ui.perspective"
            name="Trace">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.dawb.workbench.ui.beta.views.category"
            class="org.dawnsci.algorithm.ui.views.runner.AlgorithmView"
            icon="icons/spectrum.png"
            id="org.dawnsci.spectrum.ui.views.SpectrumView"
            name="Traces">
      </view>
      <view
            category="org.dawb.workbench.ui.beta.views.category"
            class="uk.ac.diamond.scisoft.analysis.rcp.views.PlotView"
            icon="icons/spectrumaxis.png"
            id="org.dawnsci.spectrum.ui.views.SpectrumPlot"
            name="Trace Plot"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="org.dawb.workbench.ui.beta.views.category"
            class="org.eclipse.ui.navigator.resources.ProjectExplorer"
            icon="icons/spectrumpe.png"
            id="org.dawnsci.spectrum.ui.views.SpectrumProject"
            name="Trace Project">
      </view>
      <view
            category="org.dawb.workbench.ui.beta.views.category"
            class="org.dawnsci.spectrum.ui.views.SpectrumDatasetView"
            icon="icons/spectrumds.png"
            id="org.dawnsci.spectrum.ui.SpectrumDatasetView"
            name="Datasets"
            restorable="true">
      </view>
      <view
            class="org.dawnsci.spectrum.ui.views.SpectrumFileView"
            icon="icons/spectrumpe.png"
            id="org.dawnsci.spectrum.ui.views.SpectrumFileView"
            name="File Navigator"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <actionProvider
            class="org.dawnsci.spectrum.ui.actions.SpectrumActionProvider"
            id="org.dawnsci.spectrum.ui.actions.OpenProvider"
            overrides="org.eclipse.ui.navigator.resources.actions.EditActions"
            priority="highest">
         <enablement>
            <with
                  variable="activeWorkbenchWindow.activePerspective">
               <equals
                     value="org.dawnsci.spectrum.ui.perspective">
               </equals>
            </with>
         </enablement>
      </actionProvider>
      <actionProvider
            class="org.dawnsci.spectrum.ui.actions.SpectrumActionProvider"
            id="org.dawnsci.spectrum.ui.actions.OpenProvider2"
            overrides="org.eclipse.ui.navigator.resources.OpenActions"
            priority="highest">
         <enablement>
            <with
                  variable="activeWorkbenchWindow.activePerspective">
               <equals
                     value="org.dawnsci.spectrum.ui.perspective">
               </equals>
            </with>
         </enablement>
      </actionProvider>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.dawnsci.spectrum.ui.preferences.SpectrumPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.dawnsci.preferences.root"
            class="org.dawnsci.spectrum.ui.preferences.SpectrumPreferencePage"
            id="org.dawnsci.spectrum.ui.preferences.page"
            name="Spectrum Default Names">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.activities">
      <activity
            id="org.dawnsci.spectrum.perspective.removeunwantedaction"
            name="Remove unwanted actions">
         <enabledWhen>
            <with
                  variable="activeWorkbenchWindow.activePerspective">
               <not>
                  <equals
                        value="org.dawnsci.spectrum.ui.perspective">
                  </equals>
               </not>
               <or>
                  <not>
                     <equals
                           value="uk.ac.diamond.scisoft.diffraction.powder.rcp.calibrationPerspective">
                     </equals>
                  </not>
               </or>
            </with>
         </enabledWhen>
      </activity>
      <activityPatternBinding
            activityId="org.dawnsci.spectrum.perspective.removeunwantedaction"
            isEqualityPattern="true"
            pattern="org.eclipse.ui.edit.text.openLocalFile">
      </activityPatternBinding>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.dawnsci.spectrum.ui.perspective">
         <hiddenMenuItem
               id="org.eclipse.ui.run">
         </hiddenMenuItem>
         <hiddenMenuItem
               id="navigate">
         </hiddenMenuItem>
         <hiddenMenuItem
               id="project">
         </hiddenMenuItem>
         <hiddenToolBarItem
               id="org.eclipse.ui.workbench.navigate">
         </hiddenToolBarItem>
         <hiddenToolBarItem
               id="org.eclipse.debug.ui.launchActionSet">
         </hiddenToolBarItem>
         <hiddenToolBarItem
               id="org.dawb.tango.extensions.shared.memory">
         </hiddenToolBarItem>
         <actionSet
               id="org.dawnsci.spectrum.ui.fileOpenActionSet">
         </actionSet>
         <hiddenMenuItem
               id="org.eclipse.search.menu">
         </hiddenMenuItem>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.dawnsci.spectrum.ui.fileOpenActionSet"
            label="Open Spectrum File..."
            visible="false">
         <action
               class="org.dawnsci.spectrum.ui.actions.OpenLocalFileAction"
               id="org.dawnsci.spectrum.ui.action1"
               label="Open Spectrum File..."
               menubarPath="file/new"
               style="push">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.dawnsci.algorithm.ui.processPage">
      <processPage
            class="org.dawnsci.spectrum.ui.views.TraceProcessPage"
            viewId="org.dawnsci.spectrum.ui.views.SpectrumView">
         <connection
               algorithmFile="spectrum_process.moml"
               runIcon="icons/run_workflow.gif"
               stopIcon="icons/stop_workflow.gif"
               title="spectrum pipline">
         </connection>
      </processPage>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
      </viewer>
      <viewerActionBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <actionExtension
                  pattern="org.dawnsci.spectrum.ui.actions.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
   </extension>
   <extension
         point="org.dawnsci.introRegister">
      <introPageRegister
            class="org.dawnsci.spectrum.ui.SpectrumPerspectiveLaunch"
            description="Designed for viewing line graphs"
            icon="icons/Trace400.png"
            id="org.dawnsci.spectrum.ui.perspective"
            name="Trace">
      </introPageRegister>
   </extension>
   <extension
         point="org.eclipse.ui.intro.configExtension">
      <configExtension
            configId="org.dawnsci.intro.universalConfig"
            content="intro/introContribution.xml">
      </configExtension>
   </extension>

</plugin>
