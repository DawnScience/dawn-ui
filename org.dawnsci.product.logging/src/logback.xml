<configuration debug="false">
  
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>DEBUG</level>
	</filter>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level %msg %n</pattern>
    </encoder>
  </appender>

	<appender name="DebugFILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${java.io.tmpdir}/${user.name}-dawn.log</file>
		
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>${java.io.tmpdir}/${user.name}-dawn_%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 20MB -->
                <maxFileSize>20MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
			<!-- keep 1 days' worth of history we are only a GUI -->
            <maxHistory>1</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
		
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
		<encoder>
			<pattern>%d %-5level %logger - %m %ex %n</pattern>
		</encoder>
	</appender>

	<appender name="HTML"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${user.home}/dawnlog.html</file>
		
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>${user.home}/dawnlog_%d{yyyy-MM-dd}.%i.html</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 20MB -->
                <maxFileSize>20MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
			<!-- keep 1 days' worth of history we are only a GUI -->
            <maxHistory>1</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
    
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
		<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
			<layout class="ch.qos.logback.classic.html.HTMLLayout">
				<pattern>%relative%date{dd-MMM-yyyy;HH:mm:ss}%thread%level%logger%msg</pattern>
			</layout>
		</encoder>
	</appender>

	<appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
		<smtpHost>localhost</smtpHost>
		<to>mark.basham@diamond.ac.uk</to>
		<from>${user.name}@${os.name}</from>
		<subject>[SDA-ERRORS] %logger{20} - %m</subject>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date %-5level %logger{35} - %message%n</pattern>
		</layout>
	</appender>

	<logger name="org.apache.commons" level="ERROR"/>
	
	<logger name="ncsa.hdf" level="ERROR"/>
	
	<root>
		<level value="ALL" />
		<appender-ref ref="DebugFILE" />
		<appender-ref ref="HTML" />
		<appender-ref ref="STDOUT" />
	</root>
</configuration>