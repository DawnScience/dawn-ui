<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.dawb.workbench.ui.beta.views.category"
            class="org.dawnsci.processing.ui.processing.ProcessingView"
            icon="icons/image-sharpen.png"
            id="org.dawnsci.processing.ui.processingView"
            name="Processing"
            restorable="true">
      </view>
      <view
            category="org.dawb.workbench.ui.beta.views.category"
            class="org.dawnsci.processing.ui.model.OperationModelView"
            icon="icons/image--pencil.png"
            id="org.dawnsci.processing.ui.modelView"
            name="Model"
            restorable="true">
      </view>
      <view
            class="org.dawnsci.processing.ui.slice.DataFileSliceView"
            icon="icons/procfolder.png"
            id="org.dawnsci.processing.ui.DataFileSliceView"
            name="Data Slice View"
            restorable="true">
      </view>
      <view
            class="org.eclipse.dawnsci.plotting.api.VanillaPlottingSystemView"
            icon="icons/input.png"
            id="org.dawnsci.processing.ui.input"
            name="Input"
            restorable="true">
      </view>
      <view
            class="org.dawnsci.processing.ui.ProcessingOutputView"
            icon="icons/output.png"
            id="org.dawnsci.processing.ui.output"
            name="Output"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            class="org.eclipse.dawnsci.plotting.api.VanillaPlottingSystemView"
            id="org.dawnsci.processing.ui.view.vanillaPlottingSystemView"
            name="Plotting System View"
            restorable="false">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.dawnsci.processing.ui.ProcessingPerspective"
            icon="icons/image-sharpen.png"
            id="org.dawnsci.processing.ui.ProcessingPerspective"
            name="Processing">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <actionProvider
            class="org.dawnsci.processing.ui.fileactions.ProcessingActionProvider"
            id="org.dawnsci.processing.ui.fileactions.ProcessingActionProvider"
            overrides="org.eclipse.ui.navigator.resources.actions.EditActions"
            priority="highest">
         <enablement>
            <with
                  variable="activeWorkbenchWindow.activePerspective">
               <equals
                     value="org.dawnsci.processing.ui.ProcessingPerspective">
               </equals>
            </with>
         </enablement>
      </actionProvider>
      <actionProvider
            class="org.dawnsci.processing.ui.fileactions.ProcessingActionProvider"
            id="org.dawnsci.processing.ui.fileactions.ProcessingActionProvider2"
            overrides="org.eclipse.ui.navigator.resources.OpenActions"
            priority="highest">
         <enablement>
            <with
                  variable="activeWorkbenchWindow.activePerspective">
               <equals
                     value="org.dawnsci.processing.ui.ProcessingPerspective">
               </equals>
            </with>
         </enablement>
      </actionProvider>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
      </viewer>
      <viewerActionBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <actionExtension
                  pattern="org.dawnsci.processing.ui.fileactions.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.dawnsci.processing.ui.fileactions.fileOpenAction"
            label="Open File to Process...">
         <action
               class="org.dawnsci.processing.ui.fileactions.OpenLocalFileAction"
               id="org.dawnsci.processing.ui.fileactions.actionOpen"
               label="Open File to Process..."
               menubarPath="file/new"
               style="push">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.dawnsci.processing.ui.ProcessingPerspective">
         <hiddenMenuItem
               id="org.eclipse.ui.run">
         </hiddenMenuItem>
         <hiddenMenuItem
               id="navigate">
         </hiddenMenuItem>
         <hiddenMenuItem
               id="project">
         </hiddenMenuItem>
         <hiddenToolBarItem
               id="org.eclipse.ui.workbench.navigate">
         </hiddenToolBarItem>
         <hiddenToolBarItem
               id="org.eclipse.debug.ui.launchActionSet">
         </hiddenToolBarItem>
         <hiddenToolBarItem
               id="org.dawb.tango.extensions.shared.memory">
         </hiddenToolBarItem>
         <hiddenMenuItem
               id="org.eclipse.search.menu">
         </hiddenMenuItem>
         <hiddenMenuItem
               id="file">
         </hiddenMenuItem>
         <hiddenMenuItem
               id="edit">
         </hiddenMenuItem>
         <hiddenToolBarItem
               id="newWizardDropDown">
         </hiddenToolBarItem>
         <hiddenToolBarItem
               id="org.eclipse.ui.edit.text.gotoLastEditPosition">
         </hiddenToolBarItem>
         <hiddenToolBarItem
               id="org.eclipse.ui.navigate.backwardHistory">
         </hiddenToolBarItem>
         <hiddenToolBarItem
               id="org.eclipse.ui.file.save">
         </hiddenToolBarItem>
         <hiddenToolBarItem
               id="org.eclipse.ui.file.saveAll">
         </hiddenToolBarItem>
         <hiddenToolBarItem
               id="org.eclipse.search.OpenSearchDialogPage">
         </hiddenToolBarItem>
         <hiddenToolBarItem
               id="org.eclipse.ui.navigate.next">
         </hiddenToolBarItem>
         <hiddenToolBarItem
               id="org.eclipse.ui.navigate.previous">
         </hiddenToolBarItem>
         <hiddenToolBarItem
               id="uk.ac.diamond.scisoft.analysis.rcp.plotting.actions.showPlotViewToolbarCommand">
         </hiddenToolBarItem>
         <hiddenToolBarItem
               id="org.eclipse.ui.navigate.forwardHistory">
         </hiddenToolBarItem>
         <hiddenToolBarItem
               id="org.eclipse.userstorage.accounts">
         </hiddenToolBarItem>
         <hiddenToolBarItem
               id="org.eclipse.ui.externaltools.ExternalToolMenuDelegateToolbar">
         </hiddenToolBarItem>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.dawnsci.fileviewer.openFile">
      <fileOpen
            class="org.dawnsci.processing.ui.fileactions.NavigatorOpen"
            id="org.dawnsci.processing.ui.fileactions.NavigatorOpen"
            perspective="org.dawnsci.processing.ui.ProcessingPerspective">
      </fileOpen>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.dawnsci.processing.ui.preference.ProcessingPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.dawnsci.plotting.api.toolPage">
      <plotting_tool_page
            class="org.dawnsci.processing.ui.tool.ProcessingImagesTool"
            icon="icons/image-sharpen.png"
            id="org.dawnsci.processing.ui.tool.ProcessingImagesTool"
            label="Processing Image">
      </plotting_tool_page>
      <plotting_tool_page
            class="org.dawnsci.processing.ui.tool.ProcessingXYTool"
            icon="icons/image-sharpen.png"
            id="org.dawnsci.processing.ui.tool.ProcessingXYTool"
            label="Processing XY">
      </plotting_tool_page>
      <plotting_tool_page
            category="org.dawnsci.plotting.tools.category.Science"
            class="org.dawnsci.processing.ui.tool.XRD2ToolPage"
            icon="icons/XRD2.png"
            id="org.dawnsci.processing.ui.tool.XRD2ToolPage"
            label="XRD2">
      </plotting_tool_page>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.dawnsci.preferences.root"
            class="org.dawnsci.processing.ui.preference.ProcessingPreferencePage"
            id="org.dawnsci.processing.ui.preference.ProcessingPreferencePage"
            name="Processing Preferences">
      </page>
   </extension>
   <extension
         point="org.eclipse.dawnsci.analysis.api.operationsetupwizardpage">
      <operationsetupwizardpage
            class="org.dawnsci.processing.ui.savu.SavuPluginModelWizardPage"
            id="org.dawnsci.processing.ui.SavuPluginModelWizardPage"
            name="Savu Filter Operation Set-up Wizard Page"
            operationid="uk.ac.diamond.scisoft.analysis.processing.python.PythonSavuOperation">
      </operationsetupwizardpage>
      <operationsetupwizardpage
            class="org.dawnsci.processing.ui.saxs.TParameterWizardPage"
            id="org.dawnsci.processing.ui.TParameterWizardPage"
            name="T Parameter Operation Set-up Wizard Page"
            operationid="uk.ac.diamond.scisoft.analysis.processing.operations.saxs.TParameterOperation">
      </operationsetupwizardpage>
      <operationsetupwizardpage
            class="org.dawnsci.processing.ui.oned.DigitalFilterWizardPage"
            id="org.dawnsci.processing.ui.DigitalFilterWizardPage"
            name="Digital Filter Operation Set-up Wizard Page"
            operationid="uk.ac.diamond.scisoft.analysis.processing.operations.DigitalFilterOperation">
      </operationsetupwizardpage>
      <operationsetupwizardpage
            class="org.dawnsci.processing.ui.roiprofile.PolygonIntegrationModelWizardPage"
            id="org.dawnsci.processing.ui.roiprofile.PolygonIntegrationModelWizardPage"
            name="Polygon Integration Wizard Page"
            operationid="uk.ac.diamond.scisoft.analysis.processing.operations.roiprofile.PolygonIntegrationOperation">
      </operationsetupwizardpage>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.dawnsci.processing.ui.fileactions.DatavisProcessingTransferHandler"
            id="org.dawnsci.processing.ui.command.transferdatavisfile"
            name="Datavis processing transfer">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.dawnsci.datavis.file.transfer"
               label="Transfer">
            <command
                  commandId="org.dawnsci.processing.ui.command.transferdatavisfile"
                  icon="icons/image-sharpen.png"
                  label="Processing"
                  style="push">
            </command>
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="org.dawnsci.datavis.DataVisPerspective">
                  </equals>
               </with>
            </visibleWhen>
         </menu>
      </menuContribution>
   </extension>
</plugin>
