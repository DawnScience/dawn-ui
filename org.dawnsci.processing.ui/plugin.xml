<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.dawb.workbench.ui.beta.views.category"
            class="org.dawnsci.processing.ui.processing.ProcessingView"
            icon="icons/image-sharpen.png"
            id="org.dawnsci.processing.ui.processingView"
            name="Processing"
            restorable="true">
      </view>
      <view
            category="org.dawb.workbench.ui.beta.views.category"
            class="org.dawnsci.processing.ui.model.psheet.OperationModelPropertySheetView"
            icon="icons/image--pencil.png"
            id="org.dawnsci.processing.ui.propertySheet"
            name="Property Sheet Model"
            restorable="true">
      </view>
      <view
            category="org.dawb.workbench.ui.beta.views.category"
            class="org.dawnsci.processing.ui.model.OperationModelView"
            icon="icons/image--pencil.png"
            id="org.dawnsci.processing.ui.modelView"
            name="Model"
            restorable="true">
      </view>
      <view
            class="org.dawnsci.processing.ui.slice.DataFileSliceView"
            icon="icons/procfolder.png"
            id="org.dawnsci.processing.ui.DataFileSliceView"
            name="Data Slice View"
            restorable="true">
      </view>
      <view
            class="uk.ac.diamond.scisoft.analysis.plotclient.view.ScriptablePlottingSystemView"
            icon="icons/input.png"
            id="org.dawnsci.processing.ui.input"
            name="Input"
            restorable="true">
      </view>
      <view
            class="uk.ac.diamond.scisoft.analysis.plotclient.view.ScriptablePlottingSystemView"
            icon="icons/output.png"
            id="org.dawnsci.processing.ui.output"
            name="Output"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.dawnsci.processing.ui.ProcessingPerspective"
            icon="icons/image-sharpen.png"
            id="org.dawnsci.processing.ui.ProcessingPerspective"
            name="Processing">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <actionProvider
            class="org.dawnsci.processing.ui.fileactions.ProcessingActionProvider"
            id="org.dawnsci.processing.ui.fileactions.ProcessingActionProvider"
            overrides="org.eclipse.ui.navigator.resources.actions.EditActions"
            priority="highest">
         <enablement>
            <with
                  variable="activeWorkbenchWindow.activePerspective">
               <equals
                     value="org.dawnsci.processing.ui.ProcessingPerspective">
               </equals>
            </with>
         </enablement>
      </actionProvider>
      <actionProvider
            class="org.dawnsci.processing.ui.fileactions.ProcessingActionProvider"
            id="org.dawnsci.processing.ui.fileactions.ProcessingActionProvider2"
            overrides="org.eclipse.ui.navigator.resources.OpenActions"
            priority="highest">
         <enablement>
            <with
                  variable="activeWorkbenchWindow.activePerspective">
               <equals
                     value="org.dawnsci.processing.ui.ProcessingPerspective">
               </equals>
            </with>
         </enablement>
      </actionProvider>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
      </viewer>
      <viewerActionBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <actionExtension
                  pattern="org.dawnsci.processing.ui.fileactions.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.dawnsci.processing.ui.fileactions.fileOpenAction"
            label="Open File to Process...">
         <action
               class="org.dawnsci.processing.ui.fileactions.OpenLocalFileAction"
               id="org.dawnsci.processing.ui.fileactions.actionOpen"
               label="Open File to Process..."
               menubarPath="file/new"
               style="push">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.dawnsci.processing.ui.ProcessingPerspective">
         <actionSet
               id="org.dawnsci.processing.ui.fileactions.fileOpenAction">
         </actionSet>
      </perspectiveExtension>
   </extension>
   <extension
         point="uk.ac.diamond.sda.navigator.openFile">
      <fileOpen
            class="org.dawnsci.processing.ui.fileactions.NavigatorOpen"
            id="org.dawnsci.processing.ui.fileactions.NavigatorOpen"
            perspective="org.dawnsci.processing.ui.ProcessingPerspective">
      </fileOpen>
   </extension>

</plugin>
